      <HintPath>E:\Private\Projects\NtFreX.Audio\src\NtFreX.Audio\bin\Release\net5.0\NtFreX.Audio.dll</HintPath>
    </Reference>
    <Reference Include="NtFreX.Audio.Infrastructure">
